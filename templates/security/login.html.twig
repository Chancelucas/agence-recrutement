{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card text-white bg-dark shadow-lg" style="max-width: 400px; border-radius: 10px;">
        <div class="card-body p-5 text-center">
            <h2 class="fw-bold mb-2 text-uppercase">Connexion</h2>
            <p class="text-white-50 mb-5">Entrz votre email et mot de passe !</p>

            {% if error %}
                <div class="alert alert-danger">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, 
                    <a href="{{ path('app_logout') }}" class="text-white">Logout</a>
                </div>
            {% endif %}

            <form method="post">
                <div class="form-outline form-white mb-4">
                    <input type="email" name="_username" id="username" 
                           class="form-control form-control-lg" 
                           value="{{ last_username }}" 
                           autocomplete="email" required autofocus>
                    <label class="form-label" for="username">Email</label>
                </div>

                <div class="form-outline form-white mb-4">
                    <input type="password" name="_password" id="password" 
                           class="form-control form-control-lg" 
                           autocomplete="current-password" required>
                    <label class="form-label" for="password">Mot de passe</label>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button class="btn btn-outline-light btn-lg px-5" type="submit">Se connecter</button>

                <p class="small mt-3">
                    <a href="#" class="text-white-50">Mot de passe oublié ?</a>
                </p>
            </form>

            <div class="d-flex justify-content-center text-center mt-4 pt-1">
                <a href="#" class="text-white"><i class="fab fa-facebook-f fa-lg"></i></a>
                <a href="#" class="text-white mx-4"><i class="fab fa-twitter fa-lg"></i></a>
                <a href="#" class="text-white"><i class="fab fa-google fa-lg"></i></a>
            </div>

            <div class="mt-4">
                <p class="mb-0">Pas encore de compte ? 
                    <a href="{{ path('app_register') }}" class="text-white-50 fw-bold">Créer</a>
                </p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
